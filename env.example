# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Admin Discord IDs (comma-separated) - Users who can use admin commands
# Get your Discord ID by enabling Developer Mode and right-clicking your name
ADMIN_IDS=123456789012345678

# Subscription URL (Ko-fi, Patreon, PayPal, etc.)
SUBSCRIBE_URL=https://ko-fi.com/yourusername

# Jellyfin Configuration
JELLYFIN_URL=http://your-jellyfin-server:8096
JELLYFIN_API_KEY=your_jellyfin_api_key

# Emby Configuration (optional)
EMBY_URL=http://your-emby-server:8096
EMBY_API_KEY=your_emby_api_key

# Plex Configuration (optional)
PLEX_URL=http://your-plex-server:32400
PLEX_TOKEN=your_plex_token

# Tautulli Configuration (recommended for detailed Plex stats)
TAUTULLI_URL=http://your-tautulli-server:8181
TAUTULLI_API_KEY=your_tautulli_api_key

# Purge Settings
PURGE_THRESHOLD_HOURS=7
PURGE_PERIOD_DAYS=15

# Database (automatically set by Railway when using PostgreSQL)
# DATABASE_URL=postgresql://...
